@model CatalogItem


<form asp-controller="Cart" asp-action="AddToCart">

    <img class="esh-catalog-thumbnail" src="@Model.PictureUri" />
    <input class="esh-catalog-button @((!User.Identity.IsAuthenticated) ? "is-disabled" : "")" type="submit" value="[ ADD TO CART ]" />

    <div class="esh-catalog-name">
        <span>@Model.Name</span>
    </div>



    <div class="row justify-content-center">
        @if (Model.OfferPrice == 0.00M)
        {
            <div class="esh-catalog-price col-md-5">
                <span>@Model.Price.ToString("N2")</span>
            </div>
        } else
        {
            <div class="esh-catalog-price col-md-5 esh-catalog-price-old">
                <span>@Model.Price.ToString("N2")</span>
            </div>
            <div class="esh-catalog-price esh-catalog-offer-price">
                <span>@Model.OfferPrice.ToString("N2")</span>
            </div>
        }

    </div>

    <input type="hidden" asp-for="@Model.Id" name="id" />
</form>
